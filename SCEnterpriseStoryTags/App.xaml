<Application x:Class="AMRCStoryTags.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AMRCStoryTags"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="AppBackground" Color="#303030" />
                    <SolidColorBrush x:Key="ButtonBlue" Color="#1360C5" />
                    <SolidColorBrush x:Key="ButtonGrey" Color="#515151" />
                    <SolidColorBrush x:Key="TextBlue" Color="#00AFFC" />
                    <system:Double x:Key="DefaultFontSize">14</system:Double>
                </ResourceDictionary>

                <ResourceDictionary Source="Dictionaries/Button.xaml"/>
                <ResourceDictionary Source="Dictionaries/Label.xaml"/>
                <ResourceDictionary Source="Dictionaries/TabControl.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
